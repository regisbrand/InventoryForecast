            Morris.Line({
                element: 'morris-one-line-chart',
                data: [
                { month: '2015-7', value: 60 },
                { month: '2015-8', value: 74},
                { month: '2015-9', value: 32},
                { month: '2015-10', value: 26},
                { month: '2015-11', value: 17},
                { month: '2015-12', value: 18},
                { month: '2016-1', value: 11},
                { month: '2016-2', value: 19},
                { month: '2016-3', value: 26},
                { month: '2016-4', value: 14},
                { month: '2016-5', value: 25},
                { month: '2016-6', value: 56}
                ],
                xkey: 'month',
                ykeys: ['value'],
                resize: true,
                lineWidth: 4,
                labels: ['Value'],
                lineColors: ['#1ab394'],
                pointSize: 5,
            });

        });
    </script>
}