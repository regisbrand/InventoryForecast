@{
    ViewBag.Title = "Dashbard v.2";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Vehicles</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">1181</h1>
                    <div class="stat-percent font-bold text-success">&nbsp;</div>
                    <small>Total vehicles in the inventory</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Investment</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">$ 40,909,134</h1>
                    <div class="stat-percent font-bold text-info">&nbsp;</div>
                    <small>Inventory valuation</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Average Price</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">$ 37,878</h1>
                    <div class="stat-percent font-bold text-navy">&nbsp;</div>
                    <small>Average vehicle price</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Turnover</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">10</h1>
                    <div class="stat-percent font-bold text-success">&nbsp;</div>
                    <small>Stock turnover rate</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Inventory History</h5>
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-xs btn-white">Today</button>
                            <button type="button" class="btn btn-xs btn-white active">Monthly</button>
                            <button type="button" class="btn btn-xs btn-white">Annual</button>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ibox-content">
                                <div id="morris-one-line-chart"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

